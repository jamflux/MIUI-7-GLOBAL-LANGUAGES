<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ActionBarStyle" parent="@miui:style/Widget.ActionBar">
        <item name="android:height">@dimen/log_detail_title_height</item>
        <item name="android:displayOptions">showCustom</item>
    </style>
    <style name="UnreadCount">
        <item name="android:textSize">10.0sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextAppearance.List.Primary.Highlight" parent="@miui:style/TextAppearance.List.Primary" />
    <style name="TextAppearance.Title.Secondary" parent="@miui:style/TextAppearance.Widget.List.Secondary">
        <item name="android:textSize">@dimen/message_edit_counter_text_font_size</item>
    </style>
    <style name="TextAppearance.Title" parent="@miui:style/TextAppearance.WindowTitle">
        <item name="android:textSize">@dimen/message_header_title_text_font_size</item>
    </style>
    <style name="ActionBar.ShowTitle" parent="@miui:style/Widget.ActionBar">
        <item name="android:displayOptions">none</item>
    </style>
    <style name="Theme.Light.Custom.ActionBar" parent="@miui:style/Theme.Light">
        <item name="android:actionBarStyle">@style/ActionBar.ShowTitle</item>
    </style>
    <style name="AntiSpam.Theme.LogActivity" parent="@miui:style/Theme.Light">
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
    </style>
    <style name="Theme.Light.NoTitile.Transparent" parent="@miui:style/Theme.Light.NoTitle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>
</resources>
